<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/property_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
            android:id="@+id/property_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="PropertyName" android:gravity="center_horizontal"/>

    <TextView
            android:id="@+id/property_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/property_name"
            android:text="(Aparttment/Bhk/Price)" android:gravity="center_horizontal"/>
<TextView
        android:id="@+id/Property_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/property_details"
        android:text="20,000,00" android:gravity="center_horizontal"/>



</RelativeLayout>
