<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_vertical">

    <EditText
        android:id="@+id/buyer_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/required_property"
        android:layout_below="@+id/required_property"
        android:hint="Buyer Name" android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/buyer_mobile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buyer_name"
        android:layout_below="@+id/buyer_name"
        android:ems="10"
        android:hint="Buyer Mobile" android:gravity="center_horizontal">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/buyer_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buyer_mobile"
        android:layout_below="@+id/buyer_mobile"
        android:hint="Buyer Email" android:gravity="center_horizontal"/>

    <Spinner
        android:id="@+id/property_expectedTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/type_text"
        android:layout_toRightOf="@+id/buyer_name" android:gravity="center_horizontal"/>

    <Spinner
        android:id="@+id/property_expectedSpaceSpinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/spacetext"
        android:layout_toRightOf="@+id/type_text" android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/expected_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expected_place"
        android:layout_below="@+id/expected_place"
        android:ems="10"
        android:hint="Price" android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/expected_place"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/required_property"
        android:layout_below="@+id/spacetext"
        android:ems="10"
        android:hint="Locality" android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/requirement_submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expected_price"
        android:layout_toLeftOf="@+id/property_expectedTypeSpinner"
        android:onClick="showPopup"
        android:text="Submit" android:layout_gravity="center_horizontal" android:layout_marginTop="25dp"
        android:textStyle="bold" android:textSize="20dp"/>

</LinearLayout>