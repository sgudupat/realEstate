<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/requirement_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <TextView
            android:id="@+id/person_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Required Person Name" android:gravity="center_horizontal"/>

    <TextView
            android:id="@+id/contact_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/person_name"
            android:text="ContactNumber" android:gravity="center_horizontal"/>
    <TextView
            android:id="@+id/ExpectedProperty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/contact_number"
            android:text="LookingFor(Apartment/Bhk/Price)" android:gravity="center_horizontal"/>
</RelativeLayout>
